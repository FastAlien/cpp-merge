  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:RandomVoid/cpp-merge.git"
  },
  "homepage": "https://github.com/RandomVoid/cpp-merge#readme",
